#include "pch.h"
#include <iostream>
#include <sstream>
using namespace std;
//Desarrollar la funci√≥n pow que recibe una base y un exponente y retorne la potencia.
int potencia(int num1, int num2)
{
	int resultado = 1;
	for (int i = 0; i < num2; i++)
	{
		resultado = resultado * num1;
	}
	return resultado;
}
int main()
{
	int num1 = 0;
	int num2 = 0;
	cout << "Ingrese la base\n";
	cin >> num1;
	cout << "Ingrese el exponente\n";
	cin >> num2;
	int resultado = potencia(num1, num2);
	cout << resultado;
	return 0;
}
